<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:background="@drawable/shape01"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:id="@+id/header_img02"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/header_img02"
            android:background="@null"
            android:id="@+id/header_search02"
            android:text="等等"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:src="@drawable/close"
            android:id="@+id/header_close"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/header_search02"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/qrcode"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:id="@+id/header_qrcode"
        />
    <ImageView
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/category"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/header_category"
        android:visibility="gone"
        />

</RelativeLayout>